<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cbssoft.www.NoteMapper">

    <insert id="insertNote" parameterType="com.cbssoft.www.domain.Note">
    	insert into NOTE (subject, content, type, date)
    	values (#{subject}, #{content}, #{type}, now())
    </insert>   
    
    <delete id="deleteNote" parameterType="int">
      delete from NOTE where id = #{id}
    </delete>
    
    <resultMap id="noteMap" type="com.cbssoft.www.domain.Note" >
    	<result property="id" column="id" />
    	<result property="subject" column="subject" />
    	<result property="content" column="content" />
    	<result property="type" column="type" />
    	<result property="date" column="date" />
    </resultMap>
    
    <select id="selectNotes" resultMap="noteMap">
    	select id, subject, content, type, date
    	from
    	NOTE
    </select>   
    
</mapper>